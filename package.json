{
  "name": "magical-api-backend",
  "version": "1.0.0",
  "description": "Backend for Magical API integration with Appwrite file uploads for resume review and scoring",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm ci",
    "build": "npm run clean && mkdir -p dist && tsc",
    "postbuild": "cp -r src/data dist/ 2>/dev/null || true",
    "verify": "ls -la dist && test -f dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "magical-api",
    "resume",
    "review",
    "scoring",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.9.0",
    "@types/pdf-parse": "^1.1.5",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "multer": "^2.0.2",
    "node-appwrite": "^15.0.1",
    "pdf-parse": "^2.2.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
